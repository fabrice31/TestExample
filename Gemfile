source 'https://rubygems.org'

# Framework to organize tests
# https://rubygems.org/gems/cucumber
gem 'cucumber'

# Library for assertions (allow to use .should? ...)
# https://rubygems.org/gems/rspec
gem 'rspec'

# Allow to create class for each page type (and help reusable coding)
# https://rubygems.org/gems/page-object
gem 'page-object'

# Browser library
# https://rubygems.org/gems/watir-webdriver
gem 'watir-webdriver'
